<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_company_form_other_information" model="ir.ui.view">
        <field name="name">res.company.form.other.information</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <!-- Add tab AFTER Branches -->
            <xpath expr="//page[@name='branches']" position="after">
                <page name="other_information" string="Other Information">

                    <group string="Company and Free Zone Information">
                        <group>
                            <field name="free_zone"/>
                            <field name="company_license_number"/>
                            <field name="incorporation_date"/>
                        </group>
                        <group>
                            <field name="trade_license_activities"/>
                        </group>
                    </group>

                    <group string="Tax Information">
                        <group>
                            <field name="corporate_tax_registration_number"/>
                            <field name="corporate_tax_start_date"/>
                            <field name="corporate_tax_end_date"/>
                        </group>
                        <group>
                            <field name="vat_registration_number"/>
                        </group>
                    </group>
                    <group string="Free Zone Regulations">
                    <group>
                        <field name="implementing_regulations_freezone"/>
                    </group>
                    </group>

                </page>
            </xpath>

        </field>
    </record>

</odoo>
